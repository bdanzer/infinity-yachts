            <a class="destination-link" href="{{iyc.destination_page_url(location_code)}}">
                <div class="container destination" style="overflow:hidden;">
                    <img class="content" src="{{iyc.destination_page_thumbnail}}">
                    <div class="centered">{{iyc.destination_page_title}}</div>
                </div>
            </a>
        </div>
    {% endfor %}
</div>